<h3>Share {{id}}</h3>
<div>
  <p>
  This share is <i>{{ status }}</i> : 
  {{#if isActive }}
    {{#if isMine}}
    <button {{ action "withdraw" }}>Withdraw</button>
    {{else}}
      {{#if isAccepted }}
        <button {{ action "revoke" }}>Revoke</button>
      {{else}}
        <button {{ action "accept" }}>Accept</button>
        <button {{ action "reject" }}>Reject</button>
      {{/if}}
    {{/if}}
  {{ else }}
  no further changes possible.
  {{/if}}
  </p>
</div>

<table class="table">
  <tr>
    <th>
      From (requestor)
    </th>
    <th>
      To (requestee)
    </th>
    <th>
      Sensors
    </th>
  </tr>
  <tr>
    <td>
      {{requester.email}}
    </td>
    <td>
      {{requestee.email}}
    </td>
    <td>
      <ul>
        {{#each sensor in sensors}}
        <li>{{sensor}}</li>
        {{/each}}
    </td>
  </tr>
</table>

<hr>

<h4>Message</h4>

{{ message }}

{{ outlet }}
